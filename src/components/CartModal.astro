            <p class="text-sm text-gray-600">€ item.price c/u</p>
        </div>
        <div class="flex items-center gap-3">
            <button class="bg-gray-200 hover:bg-gray-300 p-2 rounded-lg transition-all" id="minus-button">
                <code> <minus size={20}/> </code>
            </button>
            <span class="font-bold text-lg w-8 text-center"> item.quantity </span>
            <button class="bg-gray-200 hover:bg-gray-300 p-2 rounded-lg transition-all" id="plus-button" >
                <code> <plus size={20}/> </code>
            </button>
        </div>
        <div class="text-right">
            <p class="font-bold text-orange-600 text-lg">
                € (item.price * item.quantity).toFixed(2)
            </p>
            <button class="text-red-600 hover:text-red-700 mt-1" id="remove-button" >
                <code> <trash2 size={20}/> </code>
            </button>
        </div>
    </div>
</template>


